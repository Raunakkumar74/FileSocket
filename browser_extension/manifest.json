{
    "manifest_version": 3,
    "name": "Background Text Sender",
    "version": "1.0.0",
    "description": "Read the selected text",
    "action": {
        "default_title": "Reader Sprint",
        "default_popup": "index.html"
    },
    "icons": {
        "64": "icon.png"
    },
    "permissions": [
        "activeTab",
        "scripting"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "content.js"
            ]
        }
    ]
}